<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<p>
  <strong>email:</strong>
  <%= @user.email %>
</p>

<% @posts.each do |post| %>
  <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
  </tr>
<% end %>