<h1>Users#show</h1>

<p>
  <strong>name:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>location:</strong>
  <%# @user.username %>
</p>

<p>
  <strong>bio:</strong>
  <%# @user.username %>
</p>

<table>
  <% @posts.each do |post| %>
    <tr>
        <td><%= post.content %></td>
        <td><%= post.tags %></td>
        <td><%= post.created_at %></td>
        <td><%= link_to 'Show', post_path(post) %></td>
    </tr>
  <% end %>
</table>