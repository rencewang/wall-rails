<%= form_for @post do |f| %>
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
    
  </p>

  <p>
    <%= f.label :tags %><br>
    <%= f.select :tags, options_for_select(['moments', 'lyrics', 'thoughts', 'quotes']), {}, { class: 'form-control' } %>
  </p>
 
  <p>
    <%= f.submit 'Update Post' %>
  </p>
<% end %>