<h1>Posts#index</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Time</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.content %></td>
      <td><%= post.created_at %></td>
      <td><%= post.user_id %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
    </tr>
  <% end %>
</table>